<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card bg-secondary">
            <div class="card-header">
                Account Register
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                <div class="form-group mb-2">
                    <input type="text" class="form-control" name="name" placeholder="Name" required value="{{name}}">
                </div>
                <div class="form-group mb-2">
                    <input type="email" class="form-control" name="email" placeholder="Email" required value="{{email}}">
                </div>
                <div class="form-group mb-2">
                    <input type="password" class="form-control" name="password" placeholder="Password" required value="{{password}}">
                </div>
                <div class="form-group mb-2">
                    <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password" required value="{{confirmPassword}}">
                </div>
                <button class="btn btn-primary btn-block w-100">
                    Sign Up
                </button>
                </form>
            </div>
        </div>
    </div>
</div>