<table>
    {{#if products}}
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
        {{#each products}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.price}}</td>
                <td><img src={{this.image}} alt="" width="50px"></td>
            </tr>
        {{/each}}
    
    {{else}}
        <p>No products found</p>
    {{/if}}
</table>