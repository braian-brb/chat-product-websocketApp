{{#if error}}
<div class="alert alert-danger alert-dismissible fade show bg-dark p-2">
    {{error}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Clase"></button>
</div>
{{/if}}


{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show bg-dark p-2">
    {{message}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}